@model IEnumerable<Employee>    
@{
    ViewBag.Title = "Employees";
}
<div class="card-deck row" >
    @foreach (var employee in Model)
    {
        var photoPath = "~/images/" + (employee.PhotoPath ?? "1.png");
        <div class="col-4">
        <div class="card m-3 ">
            <div class="card-header ">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top" src="@photoPath" asp-append-version="true" height="250" width="10" />
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary">View</a>
                @*<a href="/Home/details/@employee.Id" class="btn btn-primary">View</a>*@
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    <script src="~/js/customscript.js"></script>
}
    
